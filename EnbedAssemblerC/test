; sample program : sigma
                                  ; address code

          ORG       0x00             
          LD        ZERO, A       ;   00    81 A1
          MOV       A, B          ;   02    06
          LD        DATA, C       ;   03    83 A0
;
LOOP:     ADD       C             ;   05    23
          JC        CRYUP         ;   06    E4 0D
CNTDN:    DEC       C             ;   08    47
          JZ        LPEND         ;   09    E8 10
          JMP       LOOP          ;   0B    C0 05
CRYUP:    INC       B             ;   0D    42
          JMP       CNTDN         ;   0E    C0 08
LPEND:    ST        A, RSLT0      ;   10    A4 B0
          ST        B, RSLT1      ;   12    A8 B1
STOP:     JMP       STOP          ;   14    C0 14
;
          ORG       0xA0
DATA:     DB        0x0C          ;   A0    0C          
ZERO:     DB        0x00          ;   A1    00
;
          ORG       0xB0
RSLT0:    DB        0x00          ;   B0    00
RSLT1:    DB        0x00          ;   B1    00
;
          END